# ===========================================
# FreshMart Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# MongoDB Connection
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/freshmart?retryWrites=true&w=majority

# JWT Secrets (generate secure random strings)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars

# Server Configuration
NODE_ENV=production
PORT=5000

# CORS Origins (comma-separated list of allowed frontend URLs)
CORS_ORIGINS=https://freshmart-project.vercel.app,https://your-custom-domain.com

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Admin Credentials (for initial seed)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password
